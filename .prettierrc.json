{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false
      }
    },
    {
      "files": "*.yml",
      "options": {}
    },
    {
      "files": "*.yaml",
      "options": {}
    },
    {
      "files": "*.toml",
      "options": {}
    },
    {
      "files": "*.json",
      "options": {}
    },
    {
      "files": "*.js",
      "options": {
        "trailingComma": "none",
        "tabWidth": 2,
        "semi": false,
        "singleQuote": true
      }
    },
    {
      "files": "*.ts",
      "options": {}
    }
  ]
}
